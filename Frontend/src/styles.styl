::-webkit-scrollbar {
    width: 20px;
}

::-webkit-scrollbar-thumb {
    border-radius: 2px;
    background-color: #C66C6;
    box-shadow: inset 2px 2px 2px rgba(255,255,255,.25), inset -2px -2px 2px rgba(0,0,0,.25);
}

::-webkit-scrollbar-track {     
  background-color: #404040;
}

